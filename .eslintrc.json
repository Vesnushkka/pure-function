{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true    
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-tabs": ["error", { "allowIndentationTabs": true }],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "max-len": "off"
    }
}
